#include <cstdint>
#include "compute_kernel_api/common.h"
#include "compute_kernel_api/tile_move_copy.h"
#include "compute_kernel_api/eltwise_binary.h"
#include "compute_kernel_api/eltwise_unary/eltwise_unary.h"
#include "compute_kernel_api/eltwise_unary/sqrt.h"
#include "compute_kernel_api.h"

namespace NAMESPACE {
void MAIN {
    const uint32_t per_core_tile_cnt = get_compile_time_arg_val(0);

    constexpr auto cb_in0 = tt::CBIndex::c_0;   // A
    constexpr auto cb_in1 = tt::CBIndex::c_1;   // B
    constexpr auto cb_2   = tt::CBIndex::c_2;   // scratch: A^2, then SUM
    constexpr auto cb_3   = tt::CBIndex::c_3;   // scratch: B^2
    constexpr auto cb_out = tt::CBIndex::c_16;  // output: sqrt(A^2 + B^2)

    constexpr uint32_t dst_reg = 0;

    for (uint32_t t = 0; t < per_core_tile_cnt; ++t) {
        // ---- square(A) -> cb_2 ----
        unary_op_init_common(cb_in0, cb_2);
        copy_tile_init(static_cast<uint32_t>(cb_in0));
        square_tile_init();

        acquire_dst();
        cb_wait_front(cb_in0, 1);
        cb_reserve_back(cb_2, 1);
        copy_tile(cb_in0, 0, 0);
        square_tile(0);
        pack_tile(0, cb_2);
        cb_pop_front(cb_in0, 1);
        cb_push_back(cb_2, 1);
        release_dst();

        // ---- square(B) -> cb_3 ----
        unary_op_init_common(cb_in1, cb_3);
        copy_tile_init(static_cast<uint32_t>(cb_in1));
        square_tile_init();

        acquire_dst();
        cb_wait_front(cb_in1, 1);
        cb_reserve_back(cb_3, 1);
        copy_tile(cb_in1, 0, 0);
        square_tile(0);
        pack_tile(0, cb_3);
        cb_pop_front(cb_in1, 1);
        cb_push_back(cb_3, 1);
        release_dst();

        // ---- add(A^2, B^2) -> SUM in cb_2 ----
        binary_op_init_common(cb_2, cb_3, cb_2);   // consume c2,c3; write SUM back to c2
        add_tiles_init(cb_2, cb_3);

        acquire_dst();
        cb_wait_front(cb_2, 1);
        cb_wait_front(cb_3, 1);
        cb_reserve_back(cb_2, 1);                  // space for SUM in c2
        add_tiles(cb_2, cb_3, 0, 0, dst_reg);
        pack_tile(dst_reg, cb_2);                   // SUM -> c2
        cb_pop_front(cb_3, 1);                      // we consumed one from c3
        // NOTE: We did NOT pop the *old* c2 yet; after pack, the head is SUM.
        cb_push_back(cb_2, 1);
        release_dst();

        // ---- sqrt(SUM from cb_2) -> cb_out ----
        unary_op_init_common(cb_2, cb_out);
        copy_tile_init(static_cast<uint32_t>(cb_2));
        sqrt_tile_init();

        acquire_dst();
        cb_wait_front(cb_2, 1);                     // front is SUM now
        cb_reserve_back(cb_out, 1);
        copy_tile(cb_2, 0, 0);                      // load SUM into dst
        sqrt_tile(0);                                // in-register sqrt
        pack_tile(0, cb_out);                        // write final hypot
        cb_pop_front(cb_2, 1);                       // consume SUM
        cb_push_back(cb_out, 1);
        release_dst();
    }
}
} // namespace NAMESPACE
